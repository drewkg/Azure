{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
		"location": {
			"type": "string",
			"defaultValue": "uksouth",
			"metadata": {
				"description": "The location of the resources created, this is limited to only the locations that support linked Log Analytics and Automation Account."
			},
      "allowedValues": [
        "eastus",
        "westus2",
        "canadacentral",
        "australiasoutheast",
        "southeastasia",
        "centralindia",
        "japaneast",
        "uksouth",
        "westeurope",
        "usgovvirginia"
      ]
		},
    "environment": {
      "type": "string",
      "defaultValue": "test"
    },
    "namingConvention": {
      "type": "string",
      "defaultValue": "platform-{0}-{1}-{2}"
    },
    "locationShortCodeOverride": {
      "type": "object",
      "defaultValue": {
        "eastus": "eus",
        "westus2": "wus",
        "canadacentral": "cac",
        "australiasoutheast": "ase",
        "southeastasia": "sea",
        "centralindia": "cid",
        "japaneast": "jpe",
        "uksouth": "uks",
        "westeurope": "weu",
        "usgovvirginia": "usgv"
      }
    },
    "resourceNameOverride": {
      "type": "object",
      "defaultValue": {
        "logAnalyticsWorkspaceName": "[format(parameters('namingConvention'), parameters('locationShortCodeOverride')[parameters('location')], parameters('environment'), 'log')]",
        "automationAccountName": "[format(parameters('namingConvention'), parameters('locationShortCodeOverride')[parameters('location')], parameters('environment'), 'aa')]"
      },
      "metadata": {
        "description": "Object to allow the overriding of the default naming convention, by specifying the naming individual resources.  If used then all resources need to be defined."
      }
    }
  },
  "functions": [
    {
      "namespace": "drewk",
      "members": {
        "resourceName": {
          "parameters": [
            {
              "name": "nameFormatObject",
              "type": "object"
            },
            {
              "name": "resourceIdentifier",
              "type": "string"
            }
          ],
          "output": {
            "type": "string",
            "value": "[parameters('nameFormatObject')[parameters('resourceIdentifier')]]"
          }
        }
      }
    }
  ],
  "variables": {
    "logAnalyticsWorkspaceName": "[drewk.resourceName(parameters('resourceNameOverride'), 'logAnalyticsWorkspaceName')]",
    "automationAccountName": "[drewk.resourceName(parameters('resourceNameOverride'), 'automationAccountName')]"
  },
  "resources": [
    {
      "name": "[variables('logAnalyticsWorkSpaceName')]",
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2020-10-01",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "name": "PerGB2018"
        },
        "retentionInDays": 30
      },
      "resources": [
        {
          "type": "Microsoft.OperationalInsights/workspaces/providers/diagnosticSettings",
          "apiVersion": "2017-05-01-preview",
          "name": "[concat(variables('logAnalyticsWorkspaceName'), '/Microsoft.Insights/diagnosticSettings')]",
          "location": "[parameters('location')]",
          "dependsOn": [
            "[variables('logAnalyticsWorkspaceName')]"
          ],
          "properties": {
            "workspaceId": "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkSpaceName'))]",
            "metrics": [
              {
                "category": "AllMetrics",
                "enabled": true,
                "retentionPolicy": {
                  "days": 0,
                  "enabled": false
                }
              }
            ],
            "logs": [
              {
                "category": "Audit",
                "enabled": true
              }
            ]
          }
        },
        {
          "name": "[concat(variables('logAnalyticsWorkSpaceName'), '/' , 'Automation')]",
          "type": "Microsoft.OperationalInsights/workspaces/linkedServices",
          "apiVersion": "2020-08-01",
          "location": "[parameters('location')]",
          "dependsOn": [
            "[drewk.resourceName(parameters('resourceNameOverride'), 'logAnalyticsWorkspaceName')]",
            "[variables('automationAccountName')]"
          ],
          "properties": {
            "resourceId": "[resourceId('Microsoft.Automation/automationAccounts', variables('automationAccountName'))]"
          }
        }
      ]
    },
    {
      "name": "[concat('SecurityCenterFree', '(', variables('logAnalyticsWorkspaceName'), ')')]",
      "type": "Microsoft.OperationsManagement/solutions",
      "apiVersion": "2015-11-01-preview",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[variables('logAnalyticsWorkspaceName')]"
      ],
      "plan": {
        "name": "[concat('SecurityCenterFree', '(', variables('logAnalyticsWorkspaceName'), ')')]",
        "publisher": "Microsoft",
        "product": "[concat('OMSGallery/', 'SecurityCenterFree')]",
        "promotionCode": ""
      },
      "properties": {
        "workspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceName'))]"
      }
    },
    {
      "name": "[concat('AzureActivity', '(', variables('logAnalyticsWorkspaceName'), ')')]",
      "type": "Microsoft.OperationsManagement/solutions",
      "apiVersion": "2015-11-01-preview",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[variables('logAnalyticsWorkspaceName')]"
      ],
      "plan": {
        "name": "[concat('AzureActivity', '(', variables('logAnalyticsWorkspaceName'), ')')]",
        "publisher": "Microsoft",
        "product": "[concat('OMSGallery/', 'AzureActivity')]",
        "promotionCode": ""
      },
      "properties": {
        "workspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceName'))]"
      }
    },
    {
      "name": "[concat('AzureAutomation', '(', variables('logAnalyticsWorkspaceName'), ')')]",
      "type": "Microsoft.OperationsManagement/solutions",
      "apiVersion": "2015-11-01-preview",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[variables('logAnalyticsWorkspaceName')]"
      ],
      "plan": {
        "name": "[concat('AzureAutomation', '(', variables('logAnalyticsWorkspaceName'), ')')]",
        "publisher": "Microsoft",
        "product": "[concat('OMSGallery/', 'AzureAutomation')]",
        "promotionCode": ""
      },
      "properties": {
        "workspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceName'))]"
      }
    },
    {
      "name": "[variables('automationAccountName')]",
      "type": "Microsoft.Automation/automationAccounts",
      "apiVersion": "2021-04-01",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "name": "Basic"
        }
      },
      "resources": [
        {
          "type": "Microsoft.Automation/automationAccounts/providers/diagnosticSettings",
          "apiVersion": "2017-05-01-preview",
          "name": "[concat(variables('automationAccountName'), '/Microsoft.Insights/diagnosticSettings')]",
          "location": "[parameters('location')]",
          "dependsOn": [
            "[variables('automationAccountName')]",
            "[variables('logAnalyticsWorkspaceName')]"
          ],
          "properties": {
            "workspaceId": "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceName'))]",
            "metrics": [
              {
                "category": "AllMetrics",
                "enabled": true,
                "retentionPolicy": {
                  "enabled": false,
                  "days": 0
                }
              }
            ],
            "logs": [
              {
                "category": "JobLogs",
                "enabled": true
              },
              {
                "category": "JobStreams",
                "enabled": true
              },
              {
                "category": "DscNodeStatus",
                "enabled": true
              }
            ]
          }
        }
      ]
    }
  ]
}