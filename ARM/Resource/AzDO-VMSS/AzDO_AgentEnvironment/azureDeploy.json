{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location of the resources to be created, defaults to the resource group location."
      }
    },
    "features": {
      "type": "object",
      "defaultValue": {
        "HubVNet": false,
        "CustomImages": false
      },
      "metadata": {
        "description": "Object defining which optional resources to deploy, defaults to only features supported by standalone deployments."
      }
    },
    "vmSku": {
      "type": "string",
      "defaultValue": "Standard_DS2_v2",
      "metadata": {
        "description": "Size of VMs in the VM Scale Set."
      }
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "vmssadmin",
      "metadata": {
        "description": "Admin username on all the scaleset VMs."
      }
    },
    "adminPassword": {
      "type": "securestring",
      "defaultValue": "[newGuid()]",
      "metadata": {
        "description": "Admin password for all the scaleset VMs"
      }
    },
    "virtualNetworkTopology": {
      "type": "object",
      "defaultValue": {
        "AddressRange": "10.10.0.0/16",
        "ImageBuilder": "10.10.0.0/24",
        "AzDOAgents-Win2019": "10.10.1.0/24"
      }
    }
  },
  "variables": {
    "userAssignedIdentityName": "AzDOAgents-ImageBuilder-prod-uks-uai",
    "nsgName": "AzDOAgents-prod-uks-nsg",
    "vnetName": "AzDOAgents-prod-uks-vnet",
    "Win2019SubnetName": "AzDOAgents-Win2019-prod-uks-snet",
    "ImageBuilderSubNetName": "AzDOAgents-ImageBuilder-prod-uks-snet",
    "vmssName": "AzDOAgents-Win2019-prod-uks-vmss",
    "computeGalleryName": "AzDOAgentsuksgal",
    "storageAccountName": "azdoagentuksst",
    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2019-Datacenter",
                        "version": "latest"
                      }
  },
  "resources": [
    {
      "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
      "name": "[variables('userAssignedIdentityName')]",
      "apiVersion": "2018-11-30",
      "location": "[parameters('location')]",
      "condition": "[parameters('features').CustomImages]"
    },
    {
      "name": "[guid(concat(resourceGroup().name, '-AzDOAgents-ImageBuilder-Contributor'))]",
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "condition": "[parameters('features').CustomImages]",
      "dependsOn": [
        "[variables('userAssignedIdentityName')]"
      ],
      "properties": {
        "roleDefinitionId": "[concat(subscription().id, '/providers/Microsoft.Authorization/roleDefinitions/', 'b24988ac-6180-42a0-ab88-20f7382dd24c')]",
        "principalId": "[reference(variables('userAssignedIdentityName'), '2018-11-30').principalId]",
        "scope": "[resourceGroup().id]"
      }
    },
    {
      "name": "[guid(concat(resourceGroup().name, '-AzDOAgents-ImageBuilder-BlobReader'))]",
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "condition": "[parameters('features').CustomImages]",
      "dependsOn": [
        "[variables('userAssignedIdentityName')]"
      ],
      "properties": {
        "roleDefinitionId": "[concat(subscription().id, '/providers/Microsoft.Authorization/roleDefinitions/', 'b7e6dc6d-f1e8-4753-8033-0f276bb0955b')]",
        "principalId": "[reference(variables('userAssignedIdentityName'), '2018-11-30').principalId]",
        "scope": "[resourceGroup().id]"
      }
    },
    {
      "name": "[variables('nsgName')]",
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2022-05-01",
      "location": "[parameters('location')]",
      "comments": "Simple Network Security Group for subnet [variables('subnetName')]",
      "tags": {
        "displayName": "NSG for Agent Scaleset Subnet"
      },
      "properties": {
        "securityRules": [
          {
            "name": "default-allow-rdp",
            "properties": {
              "priority": 1000,
              "access": "Allow",
              "direction": "Inbound",
              "destinationPortRange": "3389",
              "protocol": "Tcp",
              "sourceAddressPrefix": "*",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*"
            }
          }
        ]
      }
    },
    {
      "name": "[variables('vnetName')]",
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2022-05-01",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[variables('nsgName')]"
      ],
      "tags": {
        "displayName": "Virtual Network"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('virtualNetworkTopology')['AddressRange']]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('ImageBuilderSubNetName')]",
            "properties": {
              "addressPrefix": "[parameters('virtualNetworkTopology')['ImageBuilder']]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
              }
            }
          },
          {
            "name": "[variables('Win2019SubnetName')]",
            "properties": {
              "addressPrefix": "[parameters('virtualNetworkTopology')['AzDOAgents-Win2019']]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
              }
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Compute/galleries",
      "apiVersion": "2022-03-03",
      "name": "[variables('computeGalleryName')]",
      "location": "[parameters('l]ocation')]",
      "condition": "[parameters('features').CustomImages]",
      "properties": { }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2022-05-01",
      "name": "[variables('storageAccountName')]",
      "location": "[parameters('Location')]",
      "condition": "[parameters('features').CustomImages]",
      "sku": {
        "name": "Standard_LRS",
        "tier": "Standard"
      },
      "kind": "StorageV2",
      "properties": {
        "networkAcls": {
          "bypass": "AzureServices",
          "defaultAction": "Allow"
        },
        "supportsHttpsTrafficOnly": true,
        "encryption": {
          "services": {
            "file": {
              "keyType": "Account",
              "enabled": true
            },
            "blob": {
              "keyType": "Account",
              "enabled": true
            }
          },
          "keySource": "Microsoft.Storage"
        },
        "accessTier": "Hot"
      },
      "resources": [
        {
          "type": "blobServices",
          "apiVersion": "2022-05-01",
          "name": "default",
          "condition": "[parameters('features').CustomImages]",
          "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
          ],
          "properties": {
            "deleteRetentionPolicy": {
              "enabled": false
            }
          },
          "resources": [
            {
              "type": "containers",
              "apiVersion": "2022-05-01",
              "name": "vmextensions",
              "condition": "[parameters('features').CustomImages]",
              "dependsOn": [
                "default",
                "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
              ],
              "properties": {
                "publicAccess": "None"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "[variables('vmssName')]",
      "type": "Microsoft.Compute/virtualMachineScaleSets",
      "apiVersion": "2022-08-01",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[variables('vnetName')]"
      ],
      "comments": "Virtual Machine Scale Set for hosting VM's that will be registered as Azure DevOps Agents.",
      "tags": {
        "displayName": "VM Scaleset"
      },
      "sku": {
        "name": "[parameters('vmSku')]",
        "capacity": 0
      },
      "properties": {
        "overprovision": false,
        "upgradePolicy": {
          "mode": "manual"
        },
        "virtualMachineProfile": {
          "storageProfile": {
            "osDisk": {
              "createOption": "FromImage",
              "caching": "ReadWrite"
            },
            "imageReference": "[variables('imageReference')]"
          },
          "osProfile": {
            "computerNamePrefix": "Win2019",
            "adminUsername": "[parameters('adminUsername')]",
            "adminPassword": "[parameters('adminPassword')]",
            "windowsConfiguration": {
              "provisionVMAgent": true,
              "enableAutomaticUpdates": false
            }
          },
          "networkProfile": {
            "networkInterfaceConfigurations": [
              {
                "name": "nic",
                "properties": {
                  "primary": true,
                  "disableTcpStateTracking": false,
                  "enableAcceleratedNetworking": false,
                  "ipConfigurations": [
                    {
                      "name": "ipconfig",
                      "properties": {
                        "subnet": {
                          "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('Win2019SubnetName'))]"
                        }
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      }
    }
  ]
}
