{
  "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "resources": [
    {
      "type": "Microsoft.Authorization/policyDefinitions",
      "name": "name-rg-audit-policy",
      "apiVersion": "2021-06-01",
      "properties": {
        "displayName": "Naming Convention for Resource Groups",
        "description": "<Insert Description Here>",
        "metadata": {
          "category": "Guardrail",
          "version": "1.0.0.0"
        },
        "mode": "All",
        "parameters": {
          "policyAction": {
            "type": "string",
            "defaultValue": "Audit",
            "metadata": {
              "displayName": "Policy Action",
              "description": "The default action of the policy, allowable actions include None, Audit or Deny. Default is Audit."
            }
          }
        },
        "policyType": "Custom",
        "policyRule": {
          "if": {
            "allOf": [
              {
                "field": "type",
                "equals": "Microsoft.Resources/subscriptions/resourcegroups"
              },
              {
                "field": "tags[Name_Convention]",
                "exists": "false"
              }
            ]
          },
          "then": {
            "effect": "[[parameters('policyAction')]"
          }
        }
      }
    }
  ]
}
