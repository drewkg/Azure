{
  "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "resources": [
    {
      "type": "Microsoft.Authorization/policyDefinitions",
      "name": "tag-rg-modify-policy",
      "apiVersion": "2021-06-01",
      "properties": {
        "displayName": "Add or replace a naming convention tag on resource groups",
        "description": "Adds or replaces the naming convention tag and value when any resource group is created or updated. Existing resource groups can be remediated by triggering a remediation task.",
        "metadata": {
          "category": "Tags",
          "version": "1.0.0.0"
        },
        "mode": "All",
        "parameters": {
          "policyAction": {
            "type": "string",
            "defaultValue": "modify",
            "metadata": {
              "displayName": "Policy Action",
              "description": "The default action of the policy, allowable actions include None, Audit or Deny. Default is Audit."
            }
          }
        },
        "policyType": "Custom",
        "policyRule": {
          "if": {
            "allOf": [
              {
                "field": "type",
                "equals": "Microsoft.Resources/subscriptions/resourcegroups"
              },
              {
                "not": {
                  "anyOf": [
                    {
                      "field": "tags['Name_Convention']",
                      "equals": "Exempt"
                    },
                    {
                      "field": "tags['Name_Convention']",
                      "equals": "Microsoft"
                    },
                    {
                      "field": "tags['Name_Convention']",
                      "equals": "Objects.V1"
                    }
                  ]
                }
              }
            ]
          },
          "then": {
            "effect": "modify",
            "details": {
              "roleDefinitionIds": [
                "/providers/microsoft.authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
              ],
              "operations": [
                {
                  "operation": "addOrReplace",
                  "field": "tags['Name_Convention']",
                  "value": "Objects.V1"
                }
              ]
            }
          }
        }
      }
    }
  ]
}
